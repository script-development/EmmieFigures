{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "components/*": ["./src/components/*"],
            "pages/*": ["./src/pages/*"],
            "p5js/*": ["./src/p5js/*"],
            "assets/*": ["./src/assets/*"],
            "services/*": ["./src/services/*"]
        }
    },
    "typeAcquisition": {
        "include": ["jest"]
    },
    // adding vite/client here to import the ImportMetaEnv interface
    // "include": ["types/**/*"]
}
