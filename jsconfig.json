{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "components/*": ["./src/components/*"],
            "pages/*": ["./src/pages/*"],
            "sketches/*": ["./src/sketches/*"],
            "assets/*": ["./src/assets/*"],
            "services/*": ["./src/services/*"],
            "serverStore/*": ["src/serverStore/*"],
        }
    },
    "typeAcquisition": {
        "include": ["jest"]
    },
    // adding vite/client here to import the ImportMetaEnv interface
    "include": ["src/**/*", "types/**/*", "node_modules/vite/client.d.ts"]
}
